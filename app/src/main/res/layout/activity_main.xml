<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_app_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/purple"
                android:padding="10dp"
                android:text="Create app user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/rewrite_app_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/purple"
                android:padding="10dp"
                android:text="Rewrite app user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/fetch_app_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/purple"
                android:padding="10dp"
                android:text="Fetch app user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_public_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/pink"
                android:padding="10dp"
                android:text="Create public user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/rewrite_public_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/pink"
                android:padding="10dp"
                android:text="Rewrite public user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/fetch_public_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/pink"
                android:padding="10dp"
                android:text="Fetch public user.json file"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:padding="20dp"
        android:textColor="@android:color/black" />

</LinearLayout>